@{
}

<div class="buttons">
    <a button type="button" class="btn btn-success" data-toggle="modal" data-target="addTransactionModal" onclick="showTransactionModal()">
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-plus" viewBox="0 0 16 16">
            <path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4z"></path>
        </svg>
        Add a new transaction
    </a>
    <a button type="button" class="btn btn-success">
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-plus" viewBox="0 0 16 16">
            <path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4z"></path>
        </svg>
        Show transaction history
    </a>

    <div class="modal fade" id="addTransactionModal" tabindex="-1" role="dialog" aria-labelledby="addTransactionModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="addTransactionModalLabel">Modal title</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form asp-action="AddTransaction" method="post">
                        <label>Date</label>
                        <input type="datetime-local" placeholder="Date" asp-for="Transaction.Date">
                        <br />
                        <label>Name</label>
                        <input type="text" placeholder="Name" asp-for="Transaction.Name">
                        <br />
                        <label>Value</label>
                        <input type="number" placeholder="Value" asp-for="Transaction.Value">
                        <br />
                        <label>Category</label>
                        <input type="number" placeholder="CategoryId" asp-for="Transaction.CategoryId">
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                            <button type="submit" class="btn btn-primary">Save changes</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    @*<button class="btn btn-success dropdown-toggle" type="button" id="dropdownMenuButton" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
        
    </button>*@
</div>

    @foreach (var category in Model.Categories)
    {
    <div class="buttoncontainer">
        <table>
            <thead>
                <tr>
                    <th>Category</th>
                    <th>Name</th>
                    <th>Total value</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>
                        <img src="@category.ImageUrl" width="50px" height="50px">
                    </td>
                    <td>@category.Name</td>
                    <td>@category.TotalValue</td>
                </tr>
            </tbody>
        </table>
        <button class="btn btn-outline-primary" data-toggle="modal" data-target="addCategoryTransactionModal" style="margin-top: 6px; padding: 5px 11px;" onclick="showCategoryTransactionModal()">Add @category.Name transaction</button>
        <button class="btn btn-outline-primary" style="margin-top: 6px; padding: 5px 11px;" onclick="location.href='@Url.Action("Index", "Transactions", new { id = category.Id, name = category.Name, imageurl = category.ImageUrl })'">Manage @category.Name transactions</button>

        <div class="modal fade" id="addCategoryTransactionModal" tabindex="-1" role="dialog" aria-labelledby="addCategoryTransactionModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="addCategoryTransactionModalLabel">Modal title</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <form id="addTransactionForm" asp-action="AddTransaction">
                            <label>Date</label>
                            <input type="datetime-local" placeholder="Date" asp-for="Transaction.Date">
                            <br />
                            <label>Name</label>
                            <input type="text" placeholder="Name" asp-for="Transaction.Name">
                            <br />
                            <label>Value</label>
                            <input type="number" placeholder="Value" asp-for="Transaction.Value">
                            <br />
                            <label>Category</label>
                            <input type="number" placeholder="CategoryId" asp-for="Transaction.CategoryId" value="@category.Id">
                        </form>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                        <button type="button" class="btn btn-primary" onclick="submitForm()">Save changes</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

