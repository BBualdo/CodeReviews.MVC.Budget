@section Scripts{
    <script>
        function showTransactionModal() {
            $('#addTransactionModal').modal('show');
        }

        function showCategoryTransactionModal(){
            $('#addCategoryTransactionModal').modal('show');
        }

        function submitForm() {
            document.getElementById("addTransactionForm").submit();
        }
    </script>
}