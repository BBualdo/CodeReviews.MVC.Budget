@model MVC.Budget.JsPeanut.Models.ViewModel.CategoryViewModel
@{
    ViewBag.Title = "Index";
}

<div class="buttons">
    <a button type="button" class="btn btn-success" data-toggle="modal" data-target="addTransactionModal" onclick="showTransactionModal()">
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-plus" viewBox="0 0 16 16">
            <path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4z"></path>
        </svg>
        New transaction
    </a>
    <a button type="button" class="btn btn-success" onclick="location.href='@Url.Action("Index", "Transactions")'">
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-plus" viewBox="0 0 16 16">
            <path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4z"></path>
        </svg>
        Transaction history
    </a>
    <form asp-action="UpdateCurrency" method="post">
        <select asp-for="CurrencyObjectJson" asp-items="Model.CurrencySelectList" class="form-control" style="margin-top: 13px;">
            <option value="" selected disabled>Select your default currency</option>
        </select>
        <input type="submit" value="Submit"/>
    </form>
    <small id="emailHelp" class="form-text text-muted">The value of each category will be displayed in that currency. Regardless of that, you can still use another currencies for your transactions</small>
    @{
        if (ViewBag.Currency != "")
        {
            <h6>Your default currency is @ViewBag.Currency</h6>
        }
    }

    <div class="modal fade" id="addTransactionModal" tabindex="-1" role="dialog" aria-labelledby="addTransactionModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="addTransactionModalLabel">Modal title</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form asp-action="AddTransaction" method="post">
                        <label>Date</label>
                        <input type="datetime-local" placeholder="Date" asp-for="Transaction.Date">
                        <br />
                        <label>Name</label>
                        <input type="text" placeholder="Name" asp-for="Transaction.Name">
                        <br />
                        <label>Category</label>
                        <select asp-for="Transaction.CategoryId" asp-items="Model.CategorySelectList"></select>
                        <br />
                        <label>Value</label>
                        <input type="number" placeholder="Value" asp-for="Transaction.Value">
                        <br />
                        <label>Currency</label>
                        <select asp-for="Transaction.CurrencyNativeSymbol" asp-items="Model.CurrencySelectList"></select>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                            <button type="submit" class="btn btn-primary">Save changes</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

    @foreach (var category in Model.Categories)
    {
    <div class="buttoncontainer">
        <table>
            <thead>
                <tr>
                    <th>Category</th>
                    <th>Name</th>
                    <th>Total value</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>
                        <img src="@category.ImageUrl" width="50px" height="50px">
                    </td>
                    <td>@category.Name</td>
                    @{
                        if (category.Transactions != null && category.Transactions.FirstOrDefault()?.CurrencyNativeSymbol == string.Empty)
                        {
                            <td>@category.CurrencyNativeSymbol @category.TotalValue</td>
                        }
                        else if (category.Transactions != null)
                        {
                            <td>@category.CurrencyNativeSymbol @category.TotalValue</td>
                        }
                        else
                        {
                            <td>@category.CurrencyNativeSymbol @category.TotalValue</td>
                        }
                    }
                </tr>
            </tbody>
        </table>
        <button class="btn btn-outline-primary" data-toggle="modal" data-target="addCategoryTransactionModal" style="margin-top: 6px; padding: 5px 11px; height: 60px;" onclick="showCategoryTransactionModal()">Add @category.Name transaction</button>
        <button class="btn btn-outline-primary" style="margin-top: 6px; padding: 5px 11px; height: 60px;" onclick="location.href='@Url.Action("Index", "Transactions", new { id = category.Id, name = category.Name, imageurl = category.ImageUrl })'">Manage @category.Name transactions</button>
    </div>
}

